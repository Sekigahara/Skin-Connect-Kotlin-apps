<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <gradient
                android:angle="90"
                android:centerColor="@color/purple_btn"
                android:endColor="@color/background"
                android:gradientRadius="180"
                android:startColor="@color/purple_btn" />
            <size android:height="170dp"
                android:width="170dp"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>
    <item android:top="25dp" android:bottom="25dp" android:right="25dp" android:left="25dp">
        <shape android:shape="oval">
            <size android:width="140dp"
                android:height="140dp"/>
            <solid android:color="@color/black"/>
            <solid android:color="@color/background"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>
</layer-list>